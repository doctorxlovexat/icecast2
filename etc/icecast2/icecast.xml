<icecast>
    <location>Nemaƒçka</location>
    <admin>angeldobric@gmail.com</admin>
    <hostname>https://icecast2-dw8i.onrender.com</hostname>

    <limits>
        <clients>100</clients>
        <sources>2</sources>
        <queue-size>524288</queue-size>
        <client-timeout>30</client-timeout>
        <header-timeout>15</header-timeout>
        <source-timeout>10</source-timeout>
        <burst-on-connect>1</burst-on-connect>
        <burst-size>65535</burst-size>
    </limits>

    <authentication>
        <source-password>zizu</source-password>
        <relay-password>zizu</relay-password>
        <admin-user>gladijator</admin-user> <!-- Ispravljeno ime admin korisnika -->
        <admin-password>zizu</admin-password>
    </authentication>

    <listen-socket>
        <port>8000</port>
    </listen-socket>

    <http-headers>
        <header name="Access-Control-Allow-Origin" value="*"/>
    </http-headers>

    <mount>
        <mount-name>/x1</mount-name>
        <password>zizu</password>
    </mount>

    <mount>
        <mount-name>/x2</mount-name>
        <password>zizu</password>
    </mount>

    <mount>
        <mount-name>/x3</mount-name>
        <password>zizu</password>
    </mount>

    <fileserve>1</fileserve>

    <paths>
        <!-- Ispravljene putanje za direktorijume -->
        <logdir>./log</logdir> <!-- Relativna putanja za log fajlove u korenskom direktorijumu -->
        <webroot>./web</webroot> <!-- Web fajlovi treba da budu u ./web direktorijumu -->
        <adminroot>./admin</adminroot> <!-- Admin fajlovi treba da budu u ./admin direktorijumu -->
        <alias source="/" destination="/status.xsl"/>
    </paths>

    <logging>
        <!-- Ispravljene putanje za log fajlove u log/ direktorijumu -->
        <accesslog>./log/access.log</accesslog>
        <errorlog>./log/error.log</errorlog>
        <loglevel>3</loglevel>
        <logsize>10000</logsize>
    </logging>
</icecast>
